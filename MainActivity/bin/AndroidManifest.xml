<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.englishwordreminder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar" >
        >
        <activity
            android:name="com.englishwordreminder.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.englishwordreminder.WordActivity"
            android:label="@string/title_activity_words"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.englishwordreminder.DailyActivity"
            android:label="@string/title_activity_daily"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.englishwordreminder.InfoActivity"
            android:label="@string/title_activity_info"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.englishwordreminder.UserSettingActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" >
        </activity>

        
        <service android:name="com.englishwordreminder.WordAlarmService" >
        </service>

     
    </application>

</manifest>